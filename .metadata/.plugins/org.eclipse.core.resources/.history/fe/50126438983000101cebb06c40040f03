package com.revati.airline;

import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

public class LoginFrame {
    public static void main(String[] args) {
        // Create the main frame
        JFrame frame = new JFrame("Login");
        frame.setSize(400, 300);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setLayout(null); // Absolute positioning

        // Set background color
        frame.getContentPane().setBackground(Color.BLUE);
        
        // Adding Label to Frame
        JLabel Label = new JLabel("Welcome to revati airline", SwingConstants.CENTER);
        Label.setBounds(50, 10, 300, 40);
        Label.setFont(new Font("Arial", Font.BOLD, 16));
        Label.setOpaque(true); // Needed to show background color
        Label.setBackground(Color.WHITE);
        Label.setForeground(Color.BLACK);

        // Create a panel
        JPanel panel = new JPanel();
        panel.setLayout(null);
        panel.setBackground(Color.WHITE);
        panel.setSize(300, 150); // Fixed size

        // Center the panel in the frame
        int x = (frame.getWidth() - panel.getWidth()) / 2;
        int y = (frame.getHeight() - panel.getHeight()) / 2;
        panel.setLocation(x, y);

        // Add components to panel
        JLabel userLabel = new JLabel("Username:");
        userLabel.setBounds(10, 10, 100, 25);
        JTextField userText = new JTextField();
        userText.setBounds(120, 10, 150, 25);

        JLabel passLabel = new JLabel("Password:");
        passLabel.setBounds(10, 50, 100, 25);
        JPasswordField passText = new JPasswordField();
        passText.setBounds(120, 50, 150, 25);

        JButton loginButton = new JButton("Login");
        loginButton.setBounds(40, 90, 100, 30);
        
        JButton cancelButton = new JButton("Cancel");
        cancelButton.setBounds(160, 90, 100, 30);

        // Add components to panel
        panel.add(userLabel);
        panel.add(userText);
        panel.add(passLabel);
        panel.add(passText);
        panel.add(loginButton);
        panel.add(cancelButton);
        
        //handle loginEvent
        loginButton.addActionListener(new ActionListener() {
        	public void actionPerformed(ActionEvent e){
        		frame.dispose();
        		Main.main(null);
        		
        }
        });
     // Cancel Button
        cancelButton.addActionListener(e -> System.exit(0));

        // Add panel to frame
        frame.add(panel);
        frame.add(Label);

        // Make frame visible
        frame.setVisible(true);
    }
}
